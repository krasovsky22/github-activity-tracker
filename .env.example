# ── Lambda environment variables ─────────────────────────────────────────────
# Required
GITHUB_OWNER=your-username
GITHUB_REPO=your-repo
GITHUB_TOKEN_SSM_PARAM=/github-activity-tracker/github-token

# Optional
GITHUB_BRANCH=main
COMMIT_MESSAGE=
AWS_REGION=us-west-1

# Local dev only – skips SSM and uses the token directly (never set in Terraform)
GITHUB_TOKEN_OVERRIDE=
# Local dev only – points the SSM client at LocalStack
LOCALSTACK_ENDPOINT=http://localhost:4566

# ── Terraform variable overrides ─────────────────────────────────────────────
export TF_VAR_aws_region="us-west-1"
export TF_VAR_cron_schedule="cron(0 0 * * ? *)"
export TF_VAR_function_name="github-activity-tracker"
export TF_VAR_github_owner="your-username"
export TF_VAR_github_repo="your-repo"
export TF_VAR_github_branch="main"
export TF_VAR_github_token_ssm_param="/github-activity-tracker/github-token"
export TF_VAR_log_retention_days="14"
export TF_VAR_localstack_endpoint="http://localhost:4566"
